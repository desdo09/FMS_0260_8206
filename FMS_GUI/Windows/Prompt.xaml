<Window x:Class="FMS_GUI.Windows.Prompt"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:FMS_GUI.Windows"
        mc:Ignorable="d"
        Title="Prompt" Height="150" Width="450"
        WindowStyle="None"
       
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        >
    <Grid>
        <StackPanel Orientation="Vertical">
            <Label Name="titleLabel" Content="Title"   VerticalAlignment="Center" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Margin="0,10" FontSize="20px"/>
            <TextBox Name="inputText"  VerticalAlignment="Center" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Width="290" FontSize="16px" Margin="0,10,0,0"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,20,0">
                <Button Content="Cancel" Margin="5" Click="cancel_Click" FontSize="16px"/>
                <Button Content="Submit" Margin="5" Click="submit_Click" FontSize="16px"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
